{
  "compilerOptions": {
      "target": "es2015",
      "module": "commonjs",
      "checkJs": false,
      "baseUrl": "src",
      "paths": {
          "@/": ["src/*"],
          "components": ["src/components/*"]
      }
  },
  "exclude": [
      "node_modules", 
      "**/node_modules/*"
  ],
  "include": [
      "src/*.js"
  ]
}